@model Order

@{
	ViewBag.Title = "Detail";
}
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Order Detail</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="/Home">Home</a></li>
        <li class="breadcrumb-item"><a href="/OrderHistory">Order History</a></li>
        <li class="breadcrumb-item active text-white">Order Detail</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!--  Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">
                            Product Name
                        </th>
                        <th scope="col">Image</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">
                            Unit Price
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td scope="row">
                                <p class="mb-0 mt-4">@item.Product.ProductName</p>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="~/images/products/@item.Product.Image" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                                </div>
                            </td>
                            <td>
                                <p class="mb-0 mt-4">@item.Quantity</p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4">@(string.Format("{0:0.000}", item.UnitPrice)) ₫</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--  Page End -->