<div class="container-fluid banner bg-secondary my-5">
	<div class="container py-5">
		<div class="row g-4 align-items-center">
			<div class="col-lg-6">
				<div class="py-4">
					<h1 class="display-3 text-white">Table Reservation</h1>
					<p class="fw-normal display-3 text-dark mb-4">Here You Can Make A Reservation</p>
					<p class="mb-4 text-dark">Donec pretium est orci, non vulputate arcu hendrerit a. Fusce a eleifend riqsie, namei sollicitudin urna diam, sed commodo purus porta ut.</p>
				</div>
			</div>
			<div class="col-lg-6">
				<form asp-action="Reservation" asp-controllfer="Home" method="post" id="form-reservation">
					@Html.AntiForgeryToken()
					<div class="row">
						<div class="col-lg-6 col-sm-12 form-item my-1">
							<input type="text" asp-for="Reservation.CustomerName" class="form-control" placeholder="Your Name*" required />
							<span asp-validation-for="Reservation.CustomerName" class="text-danger"></span>
						</div>
						<div class="col-lg-6 col-sm-12 form-item my-1">
							<input type="email" asp-for="Reservation.Email" class="form-control" placeholder="Your Email Address" />
							<span asp-validation-for="Reservation.Email" class="text-danger"></span>
						</div>
						<div class="col-lg-6 col-sm-12 form-item my-1">
							<input type="tel" asp-for="Reservation.Phone" class="form-control" placeholder="Phone Number*" required />
							<span asp-validation-for="Reservation.Phone" class="text-danger"></span>
						</div>
						<div class="col-md-6 col-sm-12 form-item my-1">
							<input type="number" asp-for="Reservation.NumOfGuests" class="form-control" placeholder="Num Of Guests*" required min="1" />
							<span asp-validation-for="Reservation.NumOfGuests" class="text-danger"></span>
						</div>
						<div class="col-lg-6 form-item my-1">
							<div id="filterDate2">
								<input type="date" asp-for="Reservation.ReservationDate" class="form-control" required placeholder="dd/mm/yyyy" min="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" />
								<span asp-validation-for="Reservation.ReservationDate" class="text-danger"></span>
							</div>
						</div>
						<div class="col-md-6 col-sm-12 form-item my-1">

							<select asp-for="Reservation.Time" asp-items="Model.Hours" class="form-control" style="background-color:#fff">
								<option value="">Please Select An Hour*</option>
							</select>
							<span asp-validation-for="Reservation.Time" class="text-danger"></span>
						</div>
						<div class="col-lg-12 form-item my-1">
							<div>
								<select asp-for="Reservation.Location" asp-items="Model.Location" class="form-control" style="background-color:#fff">
									<option value="">Please Select Location*</option>
								</select>
								<span asp-validation-for="Reservation.Location" class="text-danger"></span>
							</div>
						</div>
						<div class="col-lg-12 form-item my-2">
							<textarea type="text" asp-for="Reservation.Message" placeholder="Message" rows="6" class="form-control"></textarea>
							<span asp-validation-for="Reservation.Message" class="text-danger"></span>
						</div>
						<div class="col-lg-12">
							<fieldset>
								<button type="submit" id="form-submit" class="banner-btn btn border-2 border-white rounded-pill text-dark py-3 px-5">Make A Reservation</button>
							</fieldset>
						</div>
					</div>
				</form>

