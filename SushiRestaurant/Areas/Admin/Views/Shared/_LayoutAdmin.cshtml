<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin SushiRestaurant</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/admin/assests/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/admin/assests/css/adminlte.min.css">
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Preloader -->
       @*  <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/assets/images/logo3-removebg-small.png" alt="AdminLTELogo" height="60" width="60">
        </div> *@
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Home" class="nav-link">Home</a>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="https://i.pinimg.com/564x/37/b4/04/37b404540945d8055a60ad1d19423e20.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="d-block">Sushi Dashboard</a>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Manager
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav">
                                <li class="nav-item">
                                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Dashboard" ? "active" : "")">
                                        @* <i class="far fa-table nav-icon"></i> *@
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                        <p>Dashboard</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Category" ? "active" : "")">
                                        <i class="fa fa-list-alt" aria-hidden="true"></i>
                                        <p>Manager Category</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Product" ? "active" : "")">
                                        <i class="fa fa-cutlery" aria-hidden="true"></i>
                                        <p>Manager Product</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Order" ? "active" : "")">
                                        <i class="fa fa-shopping-bag" aria-hidden="true"></i>
                                        <p>Manager Orders</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Admin" asp-controller="Reservation" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Reservation" ? "active" : "")">
                                        <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                                        <p>Manager Reservation</p>
                                    </a>
                                </li>
                               
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        @RenderBody()

      @*   <footer class="main-footer">
            <strong>Copyright by KIA RESTAURANT</strong> All rights reserved.
        </footer> *@
        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/admin/assests/js/jquery.min.js"></script>
    <script src="~/admin/assests/js/adminlte.js"></script>
</body>

</html>